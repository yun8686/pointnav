extends layout
block header
  div.s-padding.row
    p.col.s12.center
      a.btn-floating.btn-large.waves-effect.waves-light.blue

block main
  ul
    - for(var　i　=　0;　i<30;i++)
      li.card.grey.lighten-5
        div.card-content.row.padding-12
          .circle.card-image.col.s4.padding-none
            img(src="https://www.lawson.co.jp/ponta/tameru/bonus/img/bp_181101_122.png")
          .col.s8
            div
              p.f-14(data-campany)| 佐藤製薬
              p.f-14(data-itemName)| ユリアージュ　ウォーターハンドクリーム
            div
              p.f-14(data-priceText)| 本体価格：990円(税込1,069円)
            div.f-16.f-red
              //- ここはデータ属性の値によって色を変える4パターン：data-mark="gold",data-mark="silver",data-mark="bronze",data-mark="other"
              span.cassette-mark(data-mark="other")
              span(data-point)| 100P
                | (
              span(data-price,data-point)| 10.69
                | )

block footer
  .container
    .row
      .col.l6.s12
        h5.white-text| Footer Content
        p.grey-text.text-lighten-4| You can use rows and columns here to organize your footer content.
      .col.l4.offset-l2.s12
        h5.white-text| Links
        ul
          li
            a.grey-text.text-lighten-3| Link 1
            a.grey-text.text-lighten-3| Link 2
            a.grey-text.text-lighten-3| Link 3
            a.grey-text.text-lighten-3| Link 4
  .footer-copyright
    .container| © 2014 Copyright Text
    a.grey-text.text-lighten-4.right| More Links
